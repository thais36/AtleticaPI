<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atlética Fatec Zona Leste</title>
    <!-- Link do Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- Carregar o VLibras -->
    <script src="https://vlibras.gov.br/app/vlibras.js"></script>
</head>

<body style="font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #FFFFE0;">
    <!-- Navbar -->
    <nav class="navbar" style="display: flex; justify-content: space-between; align-items: center; padding: 10px 20px; background-color: #f1f1f1; color: #333;">
        
        <!-- Botões de Acessibilidade à Esquerda -->
        <ul class="accessibility-menu" style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0; align-items: center;">
            <li><button onclick="adjustFontSize('increase')" style="padding: 5px;">Aumentar Fonte</button></li>
            <li><button onclick="adjustFontSize('decrease')" style="padding: 5px;">Diminuir Fonte</button></li>
            <li><button onclick="toggleContrast()" style="padding: 5px;">Modo de Contraste</button></li>
        </ul>

        <!-- Navbar Principal à Direita -->
        <ul class="navbar-menu" style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0;">
            <li><a href="/" style="color: #333; text-decoration: none;"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="/evento" style="color: #333; text-decoration: none;"><i class="fas fa-trophy"></i> Eventos e Campeonatos</a></li>
            <li><a href="/loja" style="color: #333; text-decoration: none;"><i class="fas fa-shopping-cart"></i> Loja Virtual</a></li>
            <li><a href="/contato" style="color: #333; text-decoration: none;"><i class="fas fa-envelope"></i> Contato</a></li>
        </ul>
    </nav>

    <!-- Conteúdo da Página -->
    {{{body}}}

    <!-- Inicialização do VLibras -->
    <script>
        // Certifique-se de que o script VLibras foi carregado corretamente
        window.addEventListener('load', function () {
            if (typeof VLibras !== 'undefined') {
                console.log("VLibras carregado com sucesso!");
                new VLibras.Widget('https://vlibras.gov.br/app');
            } else {
                console.error("VLibras não carregado.");
            }
        });
    </script>

    <script>
        // Função para ajustar o tamanho da fonte
        function adjustFontSize(action) {
            const body = document.body;
            let currentSize = localStorage.getItem('fontSize') || '16'; // Valor padrão se não houver no localStorage
            currentSize = parseInt(currentSize);

            if (action === 'increase') {
                currentSize += 2;
            } else if (action === 'decrease') {
                currentSize -= 2;
            }

            body.style.fontSize = currentSize + 'px';
            localStorage.setItem('fontSize', currentSize); // Armazenar no localStorage
        }

        // Função para alternar entre o modo de contraste
        function toggleContrast() {
            const body = document.body;
            body.classList.toggle('high-contrast');
            const contrastStatus = body.classList.contains('high-contrast') ? 'enabled' : 'disabled';
            localStorage.setItem('contrast', contrastStatus); // Armazenar no localStorage
        }

        // Recuperar as preferências salvas e aplicar ao carregar a página
        document.addEventListener('DOMContentLoaded', () => {
            const savedFontSize = localStorage.getItem('fontSize');
            if (savedFontSize) {
                document.body.style.fontSize = savedFontSize + 'px';
            }

            const savedContrast = localStorage.getItem('contrast');
            if (savedContrast === 'enabled') {
                document.body.classList.add('high-contrast');
            }
        });
    </script>

    <style>
        /* Estilo para o modo de contraste */
        .high-contrast {
            background-color: black;
            color: white;
            filter: invert(100%);
        }
    </style>

</body>

</html>
