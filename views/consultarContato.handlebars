{{!-- consultarContato.handlebars --}}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Recados</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #FFFFE0;
        }
        header {
            background-color: #94210a;
            padding: 20px;
            text-align: center;
            color: white;
        }
        nav {
            display: flex;
            justify-content: center;
            padding: 10px 20px;
            background-color: #f1f1f1;
        }
        .navbar-menu {
            list-style: none;
            display: flex;
            gap: 40px;
            margin: 0;
            padding: 0;
        }
        .navbar-menu li a {
            color: #333;
            text-decoration: none;
        }
        .container {
            padding: 20px;
            max-width: 1200px;
            margin: 20px auto;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }
        th {
            background-color: #94210a;
            color: white;
        }
         .button {
            padding: 5px 10px; 
            margin: 0 5px; 
            border: none; 
            border-radius: 5px; 
            cursor: pointer;
        }
        .delete-button {
            background-color: red; 
            color: white;
    </style>
    
</head>
<body>
    <header>
        <h1>Gestão do Sistema - Recados</h1>
    </header>

    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/consultarInscricao">Membros Inscritos</a></li>
            <li><a href="/consultarContato">Recados</a></li>
            <li><a href="/consultarModalidade">Modalidades Esportivas</a></li>
            <li><a href="/consultarEvento">Eventos e Campeonatos</a></li>
            <li><a href="/consultarLoja">Produtos da Loja</a></li>
        </ul>
    </nav>

    <div class="container">
        <h4>Consulta de Recados</h4>
        <p>Lista dos recados para a Atlética</p>
        
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Mensagem</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {{#each contatos}}
                <tr>
                    <td>{{this.contato}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.telefone}}</td>
                    <td>{{this.mensagem}}</td>
                    <td>
                        <form action="/deletarContato/{{this.id}}" method="POST" style="display:inline;">
                            <button type="submit" class="button delete-button" onclick="return confirm('Deseja excluir este recado?')">Excluir</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
